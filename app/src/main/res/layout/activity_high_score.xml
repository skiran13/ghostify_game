<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HighScoreActivity">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/your_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amatica_sc_bold"
        android:text="Your Highscore"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/high_score_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/konfettiView"
        app:layout_constraintVertical_bias="0.764" />

    <TextView
        android:id="@+id/high_score_text_view"
        android:layout_width="205dp"
        android:layout_height="76dp"
        android:background="@drawable/border"
        android:fontFamily="@font/amatica_sc_bold"
        android:gravity="center"
        android:textColor="@color/material_dynamic_tertiary20"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/go_back_high_score_to_main_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/konfettiView"
        app:layout_constraintTop_toTopOf="@+id/konfettiView"
        app:layout_constraintVertical_bias="0.661" />

    <Button
        android:id="@+id/go_back_high_score_to_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amatica_sc_bold"
        style="@style/buttonStyling"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/konfettiView"
        app:layout_constraintVertical_bias="0.84" />

</androidx.constraintlayout.widget.ConstraintLayout>